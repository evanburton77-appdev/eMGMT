<div >
  <h5>
    Edit Agent Account
  </h5>

  <% if @agent.errors.any? %>
  <% @agent.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
  <% end %>
  <div>
    <form action="/modify_agent" method="post">
              
      <div>
        <label for="email_box">Email</label>
          
        <input id="email_box" name="query_email" value="<%= @current_agent.email %>">
          
      </div>
                                    
      <div>
        <label for="first_name_box">First name</label>
          
        <input id="first_name_box" name="query_first_name" value="<%= @current_agent.first_name %>">
          
      </div>
                      
      <div>
        <label for="last_name_box">Last name</label>
          
        <input id="last_name_box" name="query_last_name" value="<%= @current_agent.last_name %>">
          
      </div>
                      
      <div>
        <label for="photo_box">Photo</label>
          
        <input id="photo_box" name="query_photo" value="<%= @current_agent.photo %>">
          
      </div>
                      
      <div>
        <label for="linkedin_url_box">Linkedin url</label>
          
        <input id="linkedin_url_box" name="query_linkedin_url" value="<%= @current_agent.linkedin_url %>">
          
      </div>
                      
      <div>
        <label for="timezone_box">Timezone</label>
          
        <input id="timezone_box" name="query_timezone" value="<%= @current_agent.timezone %>">
          
      </div>
                      
      <div>
        <label for="organization_name_box">Organization name</label>
          
        <input id="organization_name_box" name="query_organization_name" value="<%= @current_agent.organization_name %>">
          
      </div>
                      
      <div>
        <label for="about_box">About</label>
          
        <input id="about_box" name="query_about" value="<%= @current_agent.about %>">
          
      </div>
                      
      <div>
        <label for="messages_count_box">Messages count</label>
          
        <input id="messages_count_box" name="query_messages_count" value="<%= @current_agent.messages_count %>">
          
      </div>
                      
      <div>
        <label for="gigs_count_box">Gigs count</label>
          
        <input id="gigs_count_box" name="query_gigs_count" value="<%= @current_agent.gigs_count %>">
          
      </div>
              
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a new password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your new password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
